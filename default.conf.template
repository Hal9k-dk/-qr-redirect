include /etc/nginx/redirect-map.conf;

server {
  listen 80;
  listen [::]:80;

  location / {
    root   /usr/share/nginx/html;
    index  index.html index.htm;
  }
  server_name ${NGINX_HOST};

  error_page 404 ${QRR_PREFIX}${QRR_NOT_FOUND};

  if ($redirect_uri) {
    rewrite ^ $redirect_uri redirect;
  }
}
